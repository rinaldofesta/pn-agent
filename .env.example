# ============================================================
# Play New (pn-agent) — Environment Configuration
# Copy to .env and fill in values
# ============================================================

# --- LLM Providers ---
ANTHROPIC_API_KEY=
OPENAI_API_KEY=              # Fallback provider (optional for Phase 0)

# --- Slack (Primary Channel — Phase 0) ---
SLACK_BOT_TOKEN=             # xoxb-... from Slack app
SLACK_APP_TOKEN=             # xapp-... for Socket Mode
SLACK_SIGNING_SECRET=        # From Slack app settings

# --- Assistant Identity ---
ASSISTANT_NAME=Play New
TRIGGER_PATTERN=             # Regex for @mentions (auto-configured per channel)

# --- Data & Storage ---
DATA_DIR=./data              # Local data directory
DATABASE_URL=                # PostgreSQL connection string (production)
                             # Leave empty to use SQLite (development)

# --- Container Runtime ---
CONTAINER_IMAGE=pn-agent     # Docker image for agent containers
CONTAINER_TIMEOUT=300000     # 5 minutes default
MAX_CONCURRENT_CONTAINERS=5  # Per-org limit
IDLE_TIMEOUT=120000          # 2 minutes idle before container teardown

# --- Timezone ---
TZ=Europe/Rome

# --- Phase 0 Feature Flags ---
ENABLE_PATTERN_COLLECTION=true   # Categorical pattern logging
ENABLE_WEEKLY_REVIEW=true        # Friday weekly digest proactive messages
FORWARD_MODE_ONLY=true           # No passive observation (Phase 0)
